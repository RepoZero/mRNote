<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.smrahmadi.mrnote.UI.Password"
    android:padding="10dp"
    android:background="@color/Home_background">

    <EditText
        android:id="@+id/Password_edtPass"
        style="@style/Txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter password here"
        android:textSize="29sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/Password_imgLock"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/Password_edtPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        app:srcCompat="@drawable/ic_lock_black_24dp" />

    <Button
        android:id="@+id/Password_btnEnter"
        style="@style/Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Password_edtPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Enter"
        android:textSize="20sp"/>
</RelativeLayout>
