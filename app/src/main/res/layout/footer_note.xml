<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/Note_imgAlignLeft"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/Note_imgAlignCenter"
            android:layout_toStartOf="@+id/Note_imgAlignCenter"
            android:contentDescription=""
            app:srcCompat="@drawable/ic_format_align_left_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Note_imgAlignCenter"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_format_align_center_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Note_imgAlignRight"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/Note_imgAlignCenter"
            android:layout_toRightOf="@+id/Note_imgAlignCenter"
            app:srcCompat="@drawable/ic_format_align_right_black_24dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/Note_imgBold"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            app:srcCompat="@drawable/ic_format_bold_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Note_imgItalic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            app:srcCompat="@drawable/ic_format_italic_black_24dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/Note_imgTextSize"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/Note_imgTextColor"
            android:layout_toStartOf="@+id/Note_imgTextColor"
            android:contentDescription=""
            app:srcCompat="@drawable/ic_format_size_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Note_imgTextColor"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_format_color_text_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Note_imgFont"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_toEndOf="@+id/Note_imgTextColor"
            android:layout_toRightOf="@+id/Note_imgTextColor"
            app:srcCompat="@drawable/ic_font_download_black_24dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/Note_imgBackgroundColor"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            app:srcCompat="@drawable/ic_color_lens_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/Note_imgSetImage"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            app:srcCompat="@drawable/ic_image_black_24dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


</LinearLayout>